<div class="col s12 card" style='margin-top:50px;'>
	<div class="close_container_load">
		<a class="btn btn-floating btn-medium grey darken-1 tooltipped" data-position="left" data-tooltip="Clique aqui para ocultar este bloco">
			<i class="fa fa-angle-double-up golden darken-3" aria-hidden="true"></i>	
		</a>
	</div>
	<form method="POST" action="" enctype="multipart/form-data">
		<div class="row">


			<h5 class="center">Cadastrar Dados Para o Cálculo</h5>

			<div class="input-field input-group-control col s12 m4">
				<label for="data_sentenca_acordo">Data da sentença ou do acordo</label>
				<input id="data_sentenca_acordo" type="text" class="datepicker data_sem_hora" name="data_sentenca_acordo" required="true">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="porc_honorario_escritorio">Honorário do Escritório</label>
				<input value="20" name="porc_honorario_escritorio" type="number"> %
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="porc_honorario_perito">Honorário do Perito</label>
				<input value="0" name="porc_honorario_perito" type="number"> %
			</div>

			<div class="input-field input-group-control col s6 m2">
				<label for="porc_imposto_renda">Imposto de Renda</label>
				<input value="0" name="porc_imposto_renda" type="number"> %
			</div>


			<div class="input-field input-group-control col s6 m6">
				<label for="valor_total_principal_parcela">Valor Total</label>
				<input value="0" name="valor_total_principal_parcela" type="number">
			</div>

			<div class="input-field input-group-control col s6 m6">
				<label for="valor_total_aj_parcela">Valor Total A.J</label>
				<input value="0" name="valor_total_acessor_juridico_parcela" type="number">
			</div>

		</div>

		<div class="bordo-line"></div>

		<div class="row">
			<h5 class="center">Cadastrar Parcela</h5>

			<div class="input-field input-group-control-with-search col s12 m3">
				<label for="desc_numero_processo">Número do Processo</label>
				<input disabled value="" id="desc_numero_processo" type="text">
				<a class="btn bordo lighten-1 modal-mount-anchor-id" data-link="/processos/selecionar-todos-processos" data-href="#modalinfo" data-anchor-id="#id_processo" data-anchor-descricao="#desc_numero_processo">
					<i class="fa fa-search"></i>
				</a>
				<input type="hidden" name="id_processo" id="id_processo">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="valor_parcela">Valor da Parcela</label>
				<input name="valor_parcela">
			</div>

			<div class="input-field input-group-control col s12 m3">
				<label for="data_vencimento_parcela">Vencimento</label>
				<input id="data_vencimento_parcela" type="text" class="datepicker data_sem_hora" name="data_vencimento_parcela">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="data_recebimento_reclamada">Rec. Rda.</label>
				<input id="data_recebimento_reclamada" type="text" class="datepicker data_sem_hora" name="data_recebimento_reclamada">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="data_pago_reclamante">Pago Rte.</label>
				<input id="data_pago_reclamante" type="text" class="datepicker data_sem_hora" name="data_pago_reclamante">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="acessor_juridico">A. J.</label>
				<input value="0" name="acessor_juridico">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="imposto_renda_parcela">Imposto de Renda</label>
				<input value="0" name="imposto_renda_parcela">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="inss_parcela">INSS</label>
				<input value="0" name="inss_parcela">
			</div>

			<div class="input-field input-group-control col s6 m3">
				<label for="outros_descontos_parcela">Outros Descontos</label>
				<input value="0" name="outros_descontos_parcela">
			</div>

			<div class="input-field input-group-control col s12">
				<label for="observacoes_parcela">Observações da Parcela</label>
				<textarea type="text" name="observacoes_parcela"></textarea>
			</div>

			<div class="col s12">
				<div class="bordo-line"></div>
			</div>

			<div class="input-field input-group-control col s6 m4">
				<label for="despesa_bancaria_parcela">Despesa Bancária</label>
				<input value="0" name="despesa_bancaria_parcela">
			</div>

			<div class="input-field input-group-control col s6 m4">
				<label for="numero_nota_fiscal_parcela">N° Nota Fiscal</label>
				<input name="numero_nota_fiscal_parcela">
			</div>

			<div class="input-field input-group-control-with-search col s12 m4">
				<label for="desc_banco" class="">Depositado no Banco</label>						
				<input value="" id="desc_banco" type="text" class="ui-autocomplete-input" autocomplete="off">
				<a class="btn bordo lighten-1 modal-mount-anchor-id" data-link="/processos/selecionar-todos-banco" data-href="#modalinfo" data-anchor-id="#id_banco" data-anchor-descricao="#desc_banco">
					<i class="fa fa-search"></i>
				</a>
				<input type="hidden" name="id_banco" id="id_banco">
			</div>


			<div class="col s12">
				<button data-href="/sistema/relatorios/cadastrar_parcela" class="btn bordo ajax-submit-container-reload" data-container="#container_tabela_todas_parcelas_reload" data-mensagem-sucesso="Parcela Cadastrada!">Salvar Parcela

				</button>
			</div>


		</div>

	</form>
</div>